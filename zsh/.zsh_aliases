# ==============================
# ZSH Aliases - Organized & Optimized
# ==============================

# ==============================
# Basic System Aliases
# ==============================
alias mkdir='mkdir -p'
alias cl='clear'
alias e='exit'
alias off='shutdown -h now'

# ==============================
# Editor Aliases
# ==============================
alias vi='nvim'
alias vim='nvim'

# ==============================
# Directory Navigation
# ==============================
alias ..='cd ..'
alias ...='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias .5='cd ../../../../..'

# Zoxide integration (if available)
if command -v zoxide &>/dev/null; then
    alias cd='z'
    alias cdi='zi'  # interactive mode
fi

# ==============================
# Enhanced ls with eza
# ==============================
if command -v eza &>/dev/null; then
    alias ls="eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions"
    alias ll="eza --color=always --git --no-filesize --icons=always --no-time --no-user --no-permissions"
    alias lsp="eza --color=always --long --git --no-filesize --icons=always --no-time --no-user"
    alias lsa="eza --color=always --long --git --icons=always -b -a --total-size"
    alias l="eza -l --icons --git -a"
    alias lt="eza --tree --level=3 --long --icons --git"
    alias tree="eza --tree --icons --git"
else
    alias ls='ls --color=auto'
    alias ll='ls -alF'
    alias la='ls -A'
    alias l='ls -CF'
fi

# ==============================
# Git Aliases
# ==============================
alias gs="git status"
alias gb="git branch"
alias gsw="git switch"
alias ga="git add ."
alias gaa="git add --all"
alias gr="git reset"
alias gc="git commit"
alias gco="git commit -m"
alias gp="git push"
alias gpl="git pull"
alias gl="git log --oneline --graph --decorate"
alias gla="git log --graph --all --oneline --decorate --parents"
alias gm="git merge"
alias grb="git rebase"
alias gst="git stash"
alias gsp="git stash pop"
alias gcl="git clone"

# ==============================
# Development Tools
# ==============================
alias lg="lazygit"
alias nrd='npm run dev'
alias nrs='npm run start'
alias nrb='npm run build'
alias nrt='npm run test'

# Python
alias py='python3'
alias pip='pip3'

# ==============================
# Clipboard (WM-aware)
# ==============================
if [[ "$WAYLAND_DISPLAY" ]] || [[ "$XDG_SESSION_TYPE" == "wayland" ]]; then
    # Wayland (Sway)
    alias c='wl-copy'
    alias v='wl-paste'
else
    # X11 (i3)
    alias c='xsel --input --clipboard'
    alias v='xsel --output --clipboard'
fi

