# Alias for downloading torrents
alias torrent='aria2c --seed-time=0 --enable-dht=true --enable-peer-exchange=true \
                --bt-enable-lpd=true --bt-max-peers=200 \
                --bt-request-peer-speed-limit=1M --file-allocation=falloc \
                --max-connection-per-server=16'

# Alias for downloading magnet links
alias magnet='aria2c --seed-time=0 --enable-dht=true --enable-peer-exchange=true \
                --bt-enable-lpd=true --bt-max-peers=200 \
                --bt-request-peer-speed-limit=1M --file-allocation=falloc \
                --max-connection-per-server=16 --bt-metadata-only=false'

